# üåç Globeflight Kenya - Environment Variables Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
# Get your API key from: https://resend.com/api-keys
VITE_EMAIL_API_KEY=re_your_resend_api_key_here

# =============================================================================
# LIVE CHAT (Tawk.to)
# =============================================================================
# Get your widget ID from: https://www.tawk.to/
VITE_TAWK_TO_WIDGET_ID=your_tawk_to_widget_id_here

# =============================================================================
# GOOGLE SERVICES (Optional)
# =============================================================================
# Google Maps API key for location services
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Analytics tracking ID
# Get from: https://analytics.google.com/
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for the application
VITE_BASE_URL=https://globeflight.co.ke

# Application environment
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_TRACKING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development server port
VITE_PORT=5173

# Enable/disable development features
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_DEBUG_MODE=true

# =============================================================================
# SECURITY (Production Only)
# =============================================================================
# Content Security Policy
VITE_CSP_NONCE=your_csp_nonce_here

# API rate limiting
VITE_API_RATE_LIMIT=100

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# Social media tracking
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
VITE_LINKEDIN_PIXEL_ID=your_linkedin_pixel_id

# Payment gateway (if applicable)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Error tracking service
VITE_SENTRY_DSN=your_sentry_dsn_here

# Performance monitoring
VITE_NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Company information
VITE_COMPANY_NAME=Globeflight Kenya
VITE_COMPANY_EMAIL=info@globeflight.co.ke
VITE_COMPANY_PHONE=+254 XXX XXX XXX

# Brand colors (if different from defaults)
VITE_BRAND_PRIMARY_COLOR=#ED203A
VITE_BRAND_SECONDARY_COLOR=#57C9E9

# =============================================================================
# NOTES
# =============================================================================
# 1. All variables must start with VITE_ to be accessible in the frontend
# 2. Never commit the actual .env file to version control
# 3. Keep sensitive information secure
# 4. Use different values for development and production
# 5. Test all integrations before deployment

# =============================================================================
# REQUIRED VARIABLES FOR PRODUCTION
# =============================================================================
